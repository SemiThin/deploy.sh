ARG MYSQL_VERSION

## arch: x86_64
ARG IMAGE_NAME=mysql

## arch: arm64
# ARG IMAGE_NAME=arm64v8/mysql

FROM ${IMAGE_NAME}:${MYSQL_VERSION}

#####################################
# Set Timezone
#####################################
ARG TZ=UTC
ARG MYSQL_ROOT_PASSWORD=${MYSQL_ROOT_PASSWORD}
ARG MYSQL_SLAVE=false

ENV TZ ${TZ}

# CMD ["mysqld"]

EXPOSE 3306

COPY ./root/ /

RUN if [ -f /opt/build.sh ]; then bash /opt/build.sh; else :; fi
